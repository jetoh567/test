<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NoteDetailActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="15dp">

    <TextView
        android:id="@+id/txtNoiceTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="제목"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtNoticeWriter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="작성자"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/txtNoticeDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:text="공지사항"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtNoticeDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="날짜"
        android:textSize="15dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txtNoticeOpen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="열람수"
        android:textSize="15dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnNoticeModify"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="수정하기"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#AB3030"/>

</LinearLayout>