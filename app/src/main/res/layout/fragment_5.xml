<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기타 신고기관"
        android:textStyle="bold"
        android:textSize="30dp"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교내 종합상황실에서 연락을 받지 않을 경우 경비실로 연락 부탁드립니다."
        android:textSize="18dp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남문 경비실 "
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#AB3030"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/btnSouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-970-5185"
            android:textSize="18dp"
            android:layout_gravity="left|center"
            android:layout_marginRight="120dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도서관 경비실 "
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#AB3030"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/btnLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-970-5191"
            android:textSize="18dp"
            android:layout_gravity="left|center"
            android:layout_marginRight="120dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="샬롬하우스 경비실"
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#AB3030"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/btnSharlom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-970-5194"
            android:textSize="18dp"
            android:layout_gravity="left|center"
            android:layout_marginRight="120dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교내 근무부서에서 연락을 받지 않을 경우 119, 112 로 연락 부탁드립니다."
        android:textSize="15dp"
        android:padding="10dp"/>

    
</LinearLayout>