<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/txtTitleW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공공기물훼손 관련 \n신고페이지 입니다."
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/txtSubTitleW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교내 강의실을 비롯해 이용가능한 공공시설물이 \n고장, 훼손, 파손 되었을 경우 신고해주십시오. \n이용이 불편한 시설물의 위치와 고장사항을 구체적으로 적어주시기 바랍니다."
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txtDetailW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기자재실에서 검토후 빠른 조취를 취할 것 입니다."
        android:textSize="15dp"/>

    <ListView
        android:id="@+id/lstNoteW"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"></ListView>

    <Button
        android:id="@+id/btnWriteW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글 작성"/>
</LinearLayout>