<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/edtNoteTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="제목을 입력하세요."
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/agree1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="허위를 유포하시면 안됩니다."
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/agree2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="정확한 사실을 입력해주세요."
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:textSize="15dp"/>

    <CheckBox
        android:id="@+id/check_access"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="이 글을 공개하고 싶지 않습니다."
        android:textColor="#D83535"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="3">
        <ImageView
            android:id="@+id/imgNote"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@color/cardview_light_background"
            android:layout_gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAddPic"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="첨부파일"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edtNoteDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:hint="신고내용을 작성해주세요."
        android:textSize="20dp"
        android:inputType="textMultiLine"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/btnNoteRegister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="신고글 작성" />

</LinearLayout>