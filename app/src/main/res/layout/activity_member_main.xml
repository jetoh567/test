<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.administrator.AdministratorMainActivity"
    android:orientation="vertical"
    android:layout_weightSum="10">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="회원 정보"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:layout_weight="2"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@drawable/swunie"
        android:layout_gravity="center"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/txtMemName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtMemId"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtMemNum"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnMemLogout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="로그아웃"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btnMemWrite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="신고하러 가기"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btnMemView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="내 신고글 확인하기"
        android:layout_weight="1"/>

</LinearLayout>