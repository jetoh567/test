<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Fragment_2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="분실물 관련 \n신고페이지 입니다."
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교내에서 분실물을 \n발견했을 경우 신고해주십시오. \n분실물을 발견한 위치를 구체적으로 적어주시기 바랍니다."
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="발견한 분실물은 \n학생지원팀(학생 누리관 2층)으로 \n전달해주세요.\n학생지원팀에서 검토후 조취를 취할 것 입니다."
        android:textSize="20dp"/>

    <ListView
        android:id="@+id/lstNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>