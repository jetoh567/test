<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.administrator.AdministratorMainActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="관리자 정보"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:layout_weight="2"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon2"
        android:layout_gravity="center"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/txtAdminName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtAdminPart"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtAdminNum"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnAdminLogout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="로그아웃"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnAdminCheck"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="신고글 확인하기"
        android:layout_weight="1"/>

</LinearLayout>