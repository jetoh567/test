<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/signiture" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="273dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/logo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_outsider"
            android:layout_width="0dp"
            android:layout_height="322px"
            android:layout_weight="1"
            app:srcCompat="@drawable/str" />
        <ImageView
            android:id="@+id/btn_public"
            android:layout_width="0dp"
            android:layout_height="322px"
            android:layout_weight="1"
            app:srcCompat="@drawable/fix" />
        <ImageView
            android:id="@+id/btn_animal"
            android:layout_width="0dp"
            android:layout_height="322px"
            android:layout_weight="1"
            app:srcCompat="@drawable/pig" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_lost"
            android:layout_width="0dp"
            android:layout_height="322px"
            android:layout_weight="1"
            app:srcCompat="@drawable/lost" />
        <ImageView
            android:id="@+id/btn_emergency"
            android:layout_width="0dp"
            android:layout_height="322px"
            android:layout_weight="1"
            app:srcCompat="@drawable/call" />
        <ImageView
            android:id="@+id/btn_aso"
            android:layout_width="0dp"
            android:layout_height="322px"
            android:layout_weight="1"
            app:srcCompat="@drawable/aso" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/alarm" />

        <TextView
            android:id="@+id/txtAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:textStyle="bold"
            android:textSize="18dp"/>
    </LinearLayout>



</LinearLayout>