<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="359dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/logo" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_outsider"
            android:layout_width="360px"
            android:layout_height="322px"
            app:srcCompat="@drawable/str" />
        <ImageView
            android:id="@+id/btn_public"
            android:layout_width="360px"
            android:layout_height="322px"
            app:srcCompat="@drawable/fix" />
        <ImageView
            android:id="@+id/btn_animal"
            android:layout_width="360px"
            android:layout_height="322px"
            app:srcCompat="@drawable/pig" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_lost"
            android:layout_width="360px"
            android:layout_height="322px"
            app:srcCompat="@drawable/lost" />
        <ImageView
            android:id="@+id/btn_emergency"
            android:layout_width="360px"
            android:layout_height="322px"
            app:srcCompat="@drawable/call" />
        <ImageView
            android:id="@+id/btn_aso"
            android:layout_width="360px"
            android:layout_height="322px"
            app:srcCompat="@drawable/aso" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공지사항"/>

</LinearLayout>