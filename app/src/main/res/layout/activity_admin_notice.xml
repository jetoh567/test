<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:text="상황실 공지"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop ="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txtAdminNameN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textSize="15dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/txtAdminPartN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textSize="15dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/txtAdminNumN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnNoticeLogout"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="로그아웃"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#AB3030"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnNoticeWrite"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="공지글 작성하기"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#AB3030"
        android:layout_marginBottom="20dp" />

    <ListView
        android:id="@+id/lstNotice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"/>

</LinearLayout>